CXX = c++

CXXFLAGS = -Wall -Wextra -Werror -std=c++98 -Wconversion

NAME =	convert

SRCS =	main.cpp\
		Convert.cpp\

OBJS = $(SRCS:.cpp=.o)

all : $(NAME)

$(NAME):	$(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME) $(OBJS)

re: fclean all

.PHONY: re clean fclean all